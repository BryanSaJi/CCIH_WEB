@model CCIH.Entities.CustomerUserEnt

@{
    ViewBag.Title = "RegistrarUsuario";
    Layout = "~/Views/Shared/_Layout_Administration.cshtml";
}

<main id="main" class="main">

    <div class="pagetitle">
        <h1>Registro de usuario</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/Administration/Inicio">Dashboard</a></li>
                <li class="breadcrumb-item"><a href="#">Registrar Usuario</a></li>
            </ol>
        </nav>
    </div><!-- End Page Title -->

    @using (Html.BeginForm("RegisterUser", "User", FormMethod.Post))
    {
        <section class="section">
            <div class="row">

                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Formulario de Registro de Usuario</h5>

                        <div class="container">
                            <div class="row mb-3 d-flex justify-content-center">
                                <label for="inputNumber" class="col-sm-3 col-form-label">Cédula del usuario</label>
                                <div class="col-sm-5">
                                    @Html.TextBoxFor(m => m.Id, new { @type = "number", @placeholder = "Digite la cédula", @id = "cedula", @class = "form-control", @onkeydown = "return event.keyCode !== 69" })
                                </div>
                            </div>
                            <div class="row mb-3 d-flex justify-content-center">
                                <label for="inputNumber" class="col-sm-3 col-form-label">Estado</label>
                                <div class="col-sm-5">
                                    @Html.DropDownListFor(m => m.StatusId, ViewBag.Status as List<SelectListItem>, "Selecione el estatus", new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="row mb-3 d-flex justify-content-center">
                                <label for="inputNumber" class="col-sm-3 col-form-label">Seleccione el Rol</label>
                                <div class="col-sm-5">
                                    @Html.DropDownListFor(m => m.IdRol, ViewBag.Rol as List<SelectListItem>, "Selecione el Rol", new { @class = "form-control", required = "required" })
                                </div>
                            </div>
                            <div class="row mb-3 d-flex justify-content-center">
                                <label for="inputNumber" class="col-sm-3 col-form-label">Digite el nombre de usuario</label>
                                <div class="col-sm-5">
                                    @Html.TextBoxFor(m => m.User, new { @type = "text", @placeholder = "Digite el nombre de usuario", @class = "form-control" })
                                </div>
                            </div>
                            
                            <div class="d-flex justify-content-end mb-3">
                                <button type="submit" class="btn btn-primary btn-block">Registrar usuario</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

    }
</main>

@section ApiUsuario {
    <script>
        $(document).ready(function () {
            $("#cedula").on("focusout", function () {
                buscarPersona();
            });
        });
        function buscarPersona() {
            var cedula = $("#cedula").val();
            var url = "https://apis.gometa.org/cedulas/" + cedula;

            $.getJSON(url, function (data) {
                // Extraer nombre y apellidos
                $("#nombre").val(data.results[0].firstname1);
                $("#pApellido").val(data.results[0].lastname1);
                $("#sApellido").val(data.results[0].lastname2);

            });
        }
    </script>
}

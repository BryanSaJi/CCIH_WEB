@model CCIH.Entities.UserEnt

@{
    ViewBag.Title = "VerCliente";
    Layout = "~/Views/Shared/_Layout_Administration.cshtml";
}

@using (Html.BeginForm("EditUser", "User", FormMethod.Post, new { onsubmit = "return validateForm();" }))
{
    <main id="main" class="main">

        <div class="pagetitle">
            <h1>Cliente</h1>
            <nav>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index","Admin")">Inicio</a></li>
                    <li class="breadcrumb-item"><a href="#">Cliente</a></li>
                </ol>
            </nav>
        </div><!-- End Page Title -->


        <section class="section">
            <div class="row">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Informacion del cliente</h5>

                        <!-- General Form Elements -->
                        @Html.HiddenFor(m => m.UserId)

                        <div class="row mb-3">
                            <label for="inputText" class="col-sm-2 col-form-label">Cédula</label>
                            <div class="col-sm-5">
                                @Html.TextBoxFor(m => m.PersonalID, new { @onkeyup = "ConsultPeopleInfo()", @type = "text", @placeholder = "Digite la cedula", @id = "PersonalId", @class = "form-control" })
                            </div>
                            <div class="col-sm-5 offset-2">
                                <div class="validation-message text-danger" id="cedulaValidationMessage"></div>
                            </div>
                        </div>


                        <div class="row mb-3">
                            <label for="inputText" class="col-sm-2 col-form-label">Nombre</label>
                            <div class="col-sm-5">
                                @Html.TextBoxFor(m => m.Name, new { @type = "text", @placeholder = "Digite el Nombre", @id = "nameField", @class = "form-control" })
                            </div>
                            <div class="col-sm-5 offset-2">
                                <div class="validation-message text-danger" id="nombreValidationMessage"></div>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label for="inputNumber" class="col-sm-2 col-form-label">Primer Apellido</label>
                            <div class="col-sm-5">
                                @Html.TextBoxFor(m => m.LastName, new { @type = "text", @placeholder = "Digite el Primer Apellido", @id = "lastNameField", @class = "form-control" })
                            </div>
                            <div class="col-sm-5 offset-2">
                                <div class="validation-message text-danger" id="primerApellidoValidationMessage"></div>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label for="inputNumber" class="col-sm-2 col-form-label">Segundo Apellido</label>
                            <div class="col-sm-5">
                                @Html.TextBoxFor(m => m.SecLastName, new { @type = "text", @placeholder = "Digite el Segundo Apellido", @id = "slnFIELD", @class = "form-control" }) <!-- Cambié el ID a "LastNameField" -->
                            </div>
                            <div class="col-sm-5 offset-2">
                                <div class="validation-message text-danger" id="segundoApellidoValidationMessage"></div>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label for="inputDate" class="col-sm-2 col-form-label">Fecha de Nacimiento</label>
                            <div class="col-sm-5">
                                @Html.TextBoxFor(m => m.Birthdate, new { @type = "text", @class = "form-control" })
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label for="inputEmail" class="col-sm-2 col-form-label">Email</label>
                            <div class="col-sm-5">
                                @Html.TextBoxFor(m => m.Email, new { @type = "text", @placeholder = "Digite el correo electrónico", @id = "email", @class = "form-control" })
                            </div>
                            <div class="col-sm-5 offset-2">
                                <div class="validation-message text-danger" id="emailValidationMessage"></div>
                            </div>
                        </div>


                        <div class="row mb-3">
                            <label class="col-sm-2 col-form-label">Direccion</label>
                            <div class="col-sm-5">
                                @Html.TextAreaFor(m => m.Address, new { @type = "Text", @placeholder = "Digite la direccion", @class = "form-control", @style = "height: 50px" })
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label for="inputNumber" class="col-sm-2 col-form-label">Teléfono</label>
                            <div class="col-sm-5">
                                @Html.TextBoxFor(m => m.Phone, new { @type = "text", @placeholder = "Digite el Teléfono", @id = "telefono", @class = "form-control" })
                            </div>
                            <div class="col-sm-5 offset-2">
                                <div class="validation-message text-danger" id="telefonoValidationMessage"></div>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label class="col-sm-2 col-form-label">Estatus</label>
                            <div class="col-sm-5">
                                @Html.DropDownListFor(m => m.StatusId, ViewBag.Status as List<SelectListItem>, "Selecione el estatus", new { @class = "form-control" })
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label class="col-sm-2 col-form-label">Rol</label>
                            <div class="col-sm-5">
                                @Html.DropDownListFor(m => m.IdRol, ViewBag.Rol as List<SelectListItem>, "Selecione el Rol", new { @class = "form-control" })
                            </div>
                        </div>


                        <div class="row">
                            <br>
                            <div class="col-lg-4">

                                <a type="submit" class="btn btn-secondary m-0 w-50" href="@Url.Action("ConsultRegister","Registration", new { i = @Session["IdUserCustomerRegistration"] })">Consultar Matricula</a>
                            </div>
                            <br>
                            <div class="col-lg-4">
                                <button type="button" class="btn btn-primary m-0 w-50" data-bs-toggle="modal" data-bs-target="#basicModal">Actualizar</button>
                            </div>
                        </div>


                        @*<div class="row mb-5">
            <div class="col-3">
                <button type="button" class="btn btn-outline-warning" data-bs-toggle="modal" data-bs-target="#basicModal">Actualizar</button>
            </div>

            <div class="col-3">
                <a type="submit" class="btn btn-outline-secondary" href="@Url.Action("ConsultRegister","Registration", new { i = @Session["IdUserCustomerRegistration"] })">Consultar Matricula</a>
            </div>
        </div>*@
                        ´
                    </div>



                        </div>
                        <div class="col-1">

                        </div>
                    </div>

        </section>

        <!-- Modal -->
        <div class="modal fade" id="basicModal" tabindex="-1">
            <div class="modal-dialog justify-content-center align-items-center" style="margin-top: 15%">
                <div class="modal-content justify-content-center align-items-center">
                    <div class="modal-header align-items-center">
                        <h5 class="modal-title justify-content-center align-items-center">Alerta</h5>
                    </div>
                    <div class="modal-body" style="text-align:center">
                        ¿Desea guardar los cambios efectuados?
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Cancelar</button>
                        <button type="submit" class="btn btn-success">Guardar Cambios</button>
                    </div>
                </div>
            </div>
        </div><!-- End Modal-->

    </main><!-- End #main -->
     }

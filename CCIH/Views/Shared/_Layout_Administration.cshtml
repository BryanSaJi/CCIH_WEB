<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">

    <title>Administracion CCIH</title>
    <meta content="" name="description">
    <meta content="" name="keywords">

    <!-- Favicons -->
    <link href="~/assets/Administracion/img/Icono.png" rel="icon">

    <!-- Google Fonts -->
    <link href="https://fonts.gstatic.com" rel="preconnect">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Nunito:300,300i,400,400i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet">

    <!-- Vendor CSS Files -->
    <link href="~/assets/Administracion/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/assets/Administracion/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <link href="~/assets/Administracion/vendor/boxicons/css/boxicons.min.css" rel="stylesheet">
    <link href="~/assets/Administracion/vendor/quill/quill.snow.css" rel="stylesheet">
    <link href="~/assets/Administracion/vendor/quill/quill.bubble.css" rel="stylesheet">
    <link href="~/assets/Administracion/vendor/remixicon/remixicon.css" rel="stylesheet">

    <!-- Template Main CSS File -->
    <link href="~/assets/Administracion/css/style.css" rel="stylesheet">

</head>

<body>

    <!-- ======= Header ======= -->
    <header id="header" class="header fixed-top d-flex align-items-center">
        <div class="d-flex align-items-center justify-content-between">
            <a href="/Administracion/Inicio" class="logo d-flex align-items-center">
                <img src="~/assets/Administracion/img/Icono.png" alt="">
                <span class="d-none d-lg-block">Centro Cultural</span>
            </a>
            <i class="bi bi-list toggle-sidebar-btn"></i>
        </div><!-- End Logo -->


        <nav class="header-nav ms-auto">
            <ul class="d-flex align-items-center">


                <li class="nav-item dropdown pe-3">

                    <a class="nav-link nav-profile d-flex align-items-center pe-0" href="#" data-bs-toggle="dropdown">
                        <span class="d-none d-md-block dropdown-toggle ps-2">@Session["[User]"]</span>
                    </a><!-- End Profile Iamge Icon -->

                    <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow profile">
                        <li class="dropdown-header">
                            <h6>@Session["[User]"]</h6>
                            <span>@Session["[NameRole]"]</span>
                        </li>
                        <li>
                            <hr class="dropdown-divider">
                        </li>

                        <li>
                            <a class="dropdown-item d-flex align-items-center" href="@Url.Action("EditUser", "User", new { i = Session["IdUser"] })">

                                <i class="bi bi-person"></i>
                                <span>My Profile</span>
                            </a>
                        </li>
                        <li>
                            <hr class="dropdown-divider">
                        </li>

                        <li>
                            <hr class="dropdown-divider">
                        </li>

                        <li>
                            <a class="dropdown-item d-flex align-items-center" href="@Url.Action("ChangePassword","User")">
                                <i class="bi bi-arrow-left-right"></i>
                                <span>Cambiar contraseña</span>
                            </a>
                        </li>

                        <li>
                            <a class="dropdown-item d-flex align-items-center" href="@Url.Action("LogOut","Home")">
                                <i class="bi bi-box-arrow-right"></i>
                                <span>Cerrar Sesion</span>
                            </a>
                        </li>

                    </ul><!-- End Profile Dropdown Items -->
                </li><!-- End Profile Nav -->

            </ul>
        </nav><!-- End Icons Navigation -->

    </header><!-- End Header -->
    <!-- ======= Sidebar ======= -->
    <aside id="sidebar" class="sidebar">

        <ul class="sidebar-nav" id="sidebar-nav">

            <li class="nav-item">
                <a class="nav-link " href="/Administracion/Inicio">
                    <i class="bi bi-grid"></i>
                    <span>Dashboard</span>
                </a>
            </li><!-- End Dashboard Nav -->


            <li class="nav-item">
                <a class="nav-link collapsed" data-bs-target="#components-nav" data-bs-toggle="collapse" href="#">
                    <i class="bi bi-menu-button-wide"></i><span>Matriculas</span><i class="bi bi-chevron-down ms-auto"></i>
                </a>
                <ul id="components-nav" class="nav-content collapse " data-bs-parent="#sidebar-nav">
                    <li>
                        <a href="/Administracion/Cliente">
                            <i class="bi bi-circle"></i><span>Nueva</span>
                        </a>
                    </li>
                    <li>
                        <a href="/Administracion/ConsultarMatriculas">
                            <i class="bi bi-circle"></i><span>Consultar</span>
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("ConsultPreRegister","Registration")">
                            <i class="bi bi-circle"></i><span>PreMatriculas</span>
                        </a>
                    </li>

                </ul>
            </li><!-- End Matriculas Nav -->

            @if (Session["IdRoleUser"].ToString() == "1")
            {
                <li class="nav-item">
                    <a class="nav-link collapsed" data-bs-target="#forms-nav" data-bs-toggle="collapse" href="#">
                        <i class="bi bi-journal-text"></i><span>Users</span><i class="bi bi-chevron-down ms-auto"></i>
                    </a>
                    <ul id="forms-nav" class="nav-content collapse " data-bs-parent="#sidebar-nav">
                        <li>
                            <a href="@Url.Action("Index","User")">
                                <i class="bi bi-circle"></i><span>Lista de Usuarios</span>
                            </a>
                        </li>
                        <li>
                            <a href="@Url.Action("RegisterUser","User")">
                                <i class="bi bi-circle"></i><span>Registrar Usuario</span>
                            </a>
                        </li>
                        <li>
                            <a href="@Url.Action("ListRoles","Rol")">
                                <i class="bi bi-circle"></i><span>Administrar Roles</span>
                            </a>
                        </li>
                    </ul>
                </li><!-- End Usarios Nav -->
            }

        </ul>

    </aside><!-- End Sidebar-->

    @RenderBody()

    <!-- ======= Footer ======= -->
    <footer id="footer" class="footer">
        <div class="copyright">
            &copy; Copyright <strong><span>Centro Cultural de Idiomas Heredia @DateTime.Now.Year</span></strong>. All Rights Reserved
        </div>
        <div class="credits">
            Designed by <a>Esteban Moreira</a>
        </div>
    </footer><!-- End Footer -->

    <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

    <!-- Vendor JS Files -->
    <script src="~/assets/Administracion/vendor/apexcharts/apexcharts.min.js"></script>
    <script src="~/assets/Administracion/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/assets/Administracion/vendor/chart.js/chart.umd.js"></script>
    <script src="~/assets/Administracion/vendor/echarts/echarts.min.js"></script>
    <script src="~/assets/Administracion/vendor/quill/quill.min.js"></script>
    <script src="~/assets/Administracion/vendor/simple-datatables/simple-datatables.js"></script>
    <script src="~/assets/Administracion/vendor/tinymce/tinymce.min.js"></script>
    <script src="~/assets/Administracion/vendor/php-email-form/validate.js"></script>
    <script src="~/assets/Administracion/js/DataTable/code.jquery.com_jquery-3.7.0.js"></script>


    <!-- Template Main JS File -->
    <script src="~/assets/Administracion/js/main.js"></script>
    @RenderSection("ApiUser", required: false)

</body>

</html>
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta content="width=device-width, initial-scale=1.0" name="viewport">

    <title>Administración CCIH</title>
    <meta content="" name="description">
    <meta content="" name="keywords">

    <!-- Favicons -->
    <link href="~/assets/Administration/img/Icono.png" rel="icon">

    <!-- Google Fonts -->
    <link href="https://fonts.gstatic.com" rel="preconnect">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Nunito:300,300i,400,400i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet">

    <!-- Vendor CSS Files -->
    <link href="~/assets/Administration/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/assets/Administration/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <link href="~/assets/Administration/vendor/boxicons/css/boxicons.min.css" rel="stylesheet">
    <link href="~/assets/Administration/vendor/quill/quill.snow.css" rel="stylesheet">
    <link href="~/assets/Administration/vendor/quill/quill.bubble.css" rel="stylesheet">
    <link href="~/assets/Administration/vendor/remixicon/remixicon.css" rel="stylesheet">


    <!-- Template Main CSS File -->
    <link href="~/assets/Administration/css/style.css" rel="stylesheet">

</head>

<body>

    <!-- ======= Header ======= -->
    <header id="header" class="header fixed-top d-flex align-items-center">
        <div class="d-flex align-items-center justify-content-between">
            <a href="@Url.Action("Index","Admin")" class="logo d-flex align-items-center">
                <img src="~/assets/Administration/img/Icono.png" alt="">
                <span class="d-none d-lg-block">Centro Cultural</span>
            </a>
            <div class="sidebar">
                <i class="bi bi-list toggle-sidebar-btn"></i>
 
            </div>
      
        </div><!-- End Logo -->


        <nav class="header-nav ms-auto">
            <ul class="d-flex align-items-center">


                <li class="nav-item dropdown pe-3">

                    <a class="nav-link nav-profile d-flex align-items-center pe-0" href="#" data-bs-toggle="dropdown">
                        <span class="d-none d-md-block dropdown-toggle ps-2">@Session["[User]"]</span>
                    </a><!-- End Profile Iamge Icon -->

                    <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow profile">
                        <li class="dropdown-header">
                            <h6>@Session["[User]"]</h6>
                            <span>@Session["[NameRole]"]</span>
                        </li>
                        <li>
                            <hr class="dropdown-divider">
                        </li>

                        <li>
                            <a class="dropdown-item d-flex align-items-center" href="@Url.Action("EditUser", "User", new { i = Session["IdUser"] , msj = false })">

                                <i class="bi bi-person"></i>
                                <span>Mi Perfil</span>
                            </a>
                        </li>
                        <li>
                            <hr class="dropdown-divider">
                        </li>

                        <li>
                            <hr class="dropdown-divider">
                        </li>

                        <li>
                            <a class="dropdown-item d-flex align-items-center" href="@Url.Action("ChangePassword","User")">
                                <i class="bi bi-arrow-left-right"></i>
                                <span>Cambiar contraseña</span>
                            </a>
                        </li>

                        <li>
                            <a class="dropdown-item d-flex align-items-center" href="@Url.Action("SingOut","Home")">
                                <i class="bi bi-box-arrow-right"></i>
                                <span>Cerrar Sesión</span>
                            </a>
                        </li>

                    </ul><!-- End Profile Dropdown Items -->
                </li><!-- End Profile Nav -->

            </ul>
        </nav><!-- End Icons Navigation -->

    </header><!-- End Header -->
    <!-- ======= Sidebar ======= -->
    <aside id="sidebar" class="sidebar">

        <ul class="sidebar-nav" id="sidebar-nav">



            @if (Session["IdRoleUser"].ToString() == "1")
            {


                <li class="nav-item">
                    <a class="nav-link " href="@Url.Action("Index","Admin")">
                        <i class="bi bi-grid"></i>
                        <span>Inicio</span>
                    </a>
                </li>
                <!-- End Dashboard Nav -->
                <li class="nav-item">
                    <a class="nav-link collapsed" data-bs-target="#Marcas-nav" data-bs-toggle="collapse" href="#">
                        <i class="bi bi-menu-button-wide"></i><span>Ingreso y Salida</span><i class="bi bi-chevron-down ms-auto"></i>
                    </a>
                    <ul id="Marcas-nav" class="nav-content collapse " data-bs-parent="#sidebar-nav">



                        @if (Session["IdRoleUser"].ToString() == "1" || Session["IdRoleUser"].ToString() == "5")
                        {
                            <li>
                                <a href="@Url.Action("TimeMarkTeacher","Teachers")">
                                    <i class="bi bi-circle"></i><span>Marcar Asistencia</span>
                                </a>
                            </li>
                        }

                        @if (Session["IdRoleUser"].ToString() == "1")
                        {
                            <li>
                                <a href="@Url.Action("Index", "Teachers", new { userId = Session["UserId"] })">
                                    <i class="bi bi-circle"></i><span>Todas las Marcas</span>
                                </a>
                            </li>




                        }




                    </ul>
                </li>
                @*End Marcas Nav*@

                <li class="nav-item">
                    <a class="nav-link collapsed" data-bs-target="#Grupos-nav" data-bs-toggle="collapse" href="#">
                        <i class="bi bi-menu-button-wide"></i><span>Grupos</span><i class="bi bi-chevron-down ms-auto"></i>
                    </a>
                    <ul id="Grupos-nav" class="nav-content collapse " data-bs-parent="#sidebar-nav">
                        <li>
                            <a href="@Url.Action("CreateGroup","Group")">
                                <i class="bi bi-circle"></i><span>Agregar Grupo</span>
                            </a>
                        </li>
                        <li>

                            <a href="@Url.Action("ShowGroups","Group")">
                                <i class="bi bi-circle"></i><span>Ver Grupos </span>
                            </a>
                        </li>
                        <li>
                            <a href="@Url.Action("SetPeople","Group", new { init = true, groupIdP = 0 })">
                                <i class="bi bi-circle"></i><span>Asignar Personas</span>
                            </a>
                        </li>
                        <li>
                            <a href="@Url.Action("RemovePeople","Group", new { init = true, groupIdP = 0 })">
                                <i class="bi bi-circle"></i><span>Remover Personas</span>
                            </a>
                        </li>
                    </ul>
                </li>

                @*End Matriculas Nav*@


                <li class="nav-item">
                    <a class="nav-link collapsed" data-bs-target="#Cursos-nav" data-bs-toggle="collapse" href="#">
                        <i class="bi bi-menu-button-wide"></i><span>Cursos</span><i class="bi bi-chevron-down ms-auto"></i>
                    </a>
                    <ul id="Cursos-nav" class="nav-content collapse " data-bs-parent="#sidebar-nav">
                        <li>
                            <a href="@Url.Action("ShowCourseCatalog","Course")">
                                <i class="bi bi-circle"></i><span>Ver Catalogo de Cursos</span>
                            </a>
                        </li>
                        <li>

                            <a href="@Url.Action("ShowSchedules","Schedule")">
                                <i class="bi bi-circle"></i><span>Ver Horarios </span>
                            </a>
                        </li>
                        <li>
                            <a href="@Url.Action("ShowCourses","Course")">
                                <i class="bi bi-circle"></i><span>Ver Cursos</span>
                            </a>
                        </li>

                    </ul>
                </li>


                @*End Matriculas Nav*@



                <li class="nav-item">
                    <a class="nav-link collapsed" data-bs-target="#components-nav" data-bs-toggle="collapse" href="#">
                        <i class="bi bi-menu-button-wide"></i><span>Matriculas</span><i class="bi bi-chevron-down ms-auto"></i>
                    </a>
                    <ul id="components-nav" class="nav-content collapse " data-bs-parent="#sidebar-nav">

                        <li>
                            <a href="@Url.Action("SeeCustomers","Registration")">
                                <i class="bi bi-circle"></i><span>Clientes</span>
                            </a>
                        </li>
                        <li>
                            <a href="@Url.Action("CreateRegister","Admin")">
                                <i class="bi bi-circle"></i><span>Nueva</span>
                            </a>
                        </li>
                        <li>
                            <a href="@Url.Action("ConsultRegistrations","Admin")">
                                <i class="bi bi-circle"></i><span>Consultar</span>
                            </a>
                        </li>
                        <li>
                            <a href="@Url.Action("ConsultPreRegisters","Registration")">
                                <i class="bi bi-circle"></i><span>PreMatriculas</span>
                            </a>
                        </li>
                        @*<li>
                        <a href="@Url.Action("","")">
                            <i class="bi bi-circle"></i><span>Libros</span>
                        </a>
                    </li>*@

                    </ul>
                </li><!-- End Matriculas Nav -->




                <li class="nav-item">
                    <a class="nav-link collapsed" data-bs-target="#Pagos-nav" data-bs-toggle="collapse" href="#">
                        <i class="bi bi-menu-button-wide"></i><span>Pagos</span><i class="bi bi-chevron-down ms-auto"></i>
                    </a>
                    <ul id="Pagos-nav" class="nav-content collapse " data-bs-parent="#sidebar-nav">
                        <li>
                            <a href="@Url.Action("CreatePayments","Payments")">
                                <i class="bi bi-circle"></i><span>Ingresar pago</span>
                            </a>
                        </li>
                        <li>
                            <a href="@Url.Action("ListPayments","Payments")">
                                <i class="bi bi-circle"></i><span>Listado de Pagos</span>
                            </a>
                        </li>

                    </ul>
                </li>
                <!--End Matriculas Nav-->


            }


            <li class="nav-item">
                <a class="nav-link collapsed" data-bs-target="#Profesores-nav" data-bs-toggle="collapse" href="#">
                    <i class="bi bi-menu-button-wide"></i><span>Profesores</span><i class="bi bi-chevron-down ms-auto"></i>
                </a>
                <ul id="Profesores-nav" class="nav-content collapse " data-bs-parent="#sidebar-nav">

                    @if (Session["IdRoleUser"].ToString() == "1")
                    {
                        <li>
                            <a href="@Url.Action("RequestTeacher","Teachers")">
                                <i class="bi bi-circle"></i><span>Lista de Profesores</span>
                            </a>
                        </li>


                        <li>
                            <a href="@Url.Action("RequestTeachersSchedules","Teachers")">
                                <i class="bi bi-circle"></i><span>Lista de Horarios</span>
                            </a>
                        </li>
                    }

                </ul>
            </li>
            @*End Teachers Nav*@

            <li class="nav-item">
                <a class="nav-link collapsed" data-bs-target="#forms-nav" data-bs-toggle="collapse" href="#">
                    <i class="bi bi-journal-text"></i><span>Usuarios</span><i class="bi bi-chevron-down ms-auto"></i>
                </a>
                <ul id="forms-nav" class="nav-content collapse " data-bs-parent="#sidebar-nav">
                    <li>
                        <a href="@Url.Action("Index","User")">
                            <i class="bi bi-circle"></i><span>Lista de Usuarios</span>
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("Customer","Admin")">
                            <i class="bi bi-circle"></i><span>Registrar Usuario</span>
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("ListRoles","Role")">
                            <i class="bi bi-circle"></i><span>Administrar Roles</span>
                        </a>
                    </li>
                </ul>
            </li><!-- End Usarios Nav -->



        </ul>

    </aside><!-- End Sidebar-->

    @RenderBody()


    <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

    <!-- Vendor JS Files -->
    <script src="~/assets/Administration/vendor/apexcharts/apexcharts.min.js"></script>
    <script src="~/assets/Administration/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/assets/Administration/vendor/chart.js/chart.umd.js"></script>
    <script src="~/assets/Administration/vendor/echarts/echarts.min.js"></script>
    <script src="~/assets/Administration/vendor/quill/quill.min.js"></script>
    <script src="~/assets/Administration/vendor/simple-datatables/simple-datatables.js"></script>
    <script src="~/assets/Administration/vendor/tinymce/tinymce.min.js"></script>
    <script src="~/assets/Administration/vendor/php-email-form/validate.js"></script>


    <!-- Main JS File -->
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script src="~/assets/Administration/js/main.js"></script>

</body>

</html>
@model CCIH.Entities.ChangePasswordEnt
@{
    ViewBag.Title = "Cambiar Contraseña";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("ChangePassword", "User", FormMethod.Post))
{
    <section class="section">
        @Html.HiddenFor(m => m.UserID)

        <div class="container">
            <div class="row mb-3 d-flex justify-content-center">
                <label for="inputNumber" class="col-sm-3 col-form-label">Nombre de Usuario</label>
                <div class="col-sm-5">
                    @Html.TextBoxFor(m => m.UserID, new { @placeholder = "Nombre de Usuario", @class = "form-control" })
                </div>
            </div>
            <div class="row mb-3 d-flex justify-content-center">
                <label for="inputNumber" class="col-sm-3 col-form-label">Nueva Contraseña</label>
                <div class="col-sm-5">
                    @Html.PasswordFor(m => m.NewPw, new { @placeholder = "Nueva Contraseña", @class = "form-control" })
                </div>
            </div>
            <div class="row mb-3 d-flex justify-content-center">
                <label for="inputNumber" class="col-sm-3 col-form-label">Confirmar Contraseña</label>
                <div class="col-sm-5">
                    @Html.PasswordFor(m => m.ConfirmPw, new { @placeholder = "Confirmar Contraseña", @class = "form-control" })
                </div>
            </div>
            <div class="d-flex justify-content-center mb-3">
                <button type="submit" class="btn btn-primary">Cambiar Contraseña</button>
            </div>
        </div>
    </section>
}

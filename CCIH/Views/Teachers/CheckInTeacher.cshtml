
@{
    ViewBag.Title = "CheckInTeacher";
    Layout = "~/Views/Shared/_Layout_Administration.cshtml";
}

<main id="main" class="main">
    <div class="pagetitle">
        <h1>Ingreso y Salida</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/Administration/Inicio">Inicio</a></li>
                <li class="breadcrumb-item">Profesores</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->

    <style>


        #clock {
            font-size: 10vh;
            font-weight: bold;
        }

        #date {
            font-size: 5vh;
            margin-top: -10px;
        }

        #button-container {
            margin-top: 20px;
        }
    </style>


    <div class="container" style="position: center; text-align:center">

        <div id="clock"></div>
        <div id="date"></div>

        <div id="button-container">
            <button class="btn btn-success " style=" display: inline-block; margin: 20px;  font-size: 3vh;  border-radius: 5px; height: 10vh; width:35vh ">
                <i class="bi bi-hourglass-top" style="margin-right: 5px;"></i>Registrar Ingreso</button>
            <button class="btn btn-danger" style=" display: inline-block; margin: 20px; font-size: 3vh; border-radius: 5px; height: 10vh; width: 35vh ">
                <i class="bi bi-hourglass-bottom" style="margin-right: 5px;"></i>Registrar Salida</button>
        </div>

    </div>


</main>


<script>
    function updateTime() {
        var now = new Date();
        var hours = now.getHours();
        var minutes = now.getMinutes();
        var seconds = now.getSeconds();

        // Añadir ceros a la izquierda si es necesario
        hours = hours < 10 ? '0' + hours : hours;
        minutes = minutes < 10 ? '0' + minutes : minutes;
        seconds = seconds < 10 ? '0' + seconds : seconds;

        var timeString = hours + ':' + minutes + ':' + seconds;

        var options = { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' };
        var dateString = now.toLocaleDateString('es-ES', options);

        document.getElementById('clock').textContent = timeString;
        document.getElementById('date').textContent = dateString;
    }

    setInterval(updateTime, 1000);
    updateTime();
</script>

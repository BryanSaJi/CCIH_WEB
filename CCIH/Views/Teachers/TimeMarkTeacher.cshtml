@model CCIH.Entities.TeacherEnt

@{
    ViewBag.Title = "TimeMarkTeacher";
    Layout = "~/Views/Shared/_Layout_Administration.cshtml";
}

<main id="main" class="main">
    <div class="pagetitle">
        <h1>Ingreso y Salida</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/Administration/Inicio">Inicio</a></li>
                <li class="breadcrumb-item">Profesores</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->

    <style>
        #clock {
            font-size: 10vh;
            font-weight: bold;
        }

        #date {
            font-size: 5vh;
            margin-top: -10px;
        }

        #button-container {
            margin-top: 20px;
        }
    </style>

    <div class="container" style="position: center; text-align:center">

        <div id="clock"></div>
        <div id="date"></div>

        <form asp-action="MarkTime" asp-controller="TeachersController" method="post" >
            <input type="hidden" name="i" value="1" />
            <button id="ingreso" type="submit" class="btn btn-success" style="display: inline-block; margin: 20px; font-size: 3vh; border-radius: 5px; height: 10vh; width:35vh ">
                <i class="bi bi-hourglass-top" style="margin-right: 5px;"></i>Registrar Ingreso
            </button>
            <div id="msj-ingreso"></div>
        </form>

        <form asp-action="MarkTime" asp-controller="TeachersController" method="post">
            <input type="hidden" name="i" value="2" />
            <button id="salida" type="submit" class="btn btn-danger" style="display: inline-block; margin: 20px; font-size: 3vh; border-radius: 5px; height: 10vh; width:35vh ">
                <i class="bi bi-hourglass-top" style="margin-right: 5px;"></i>Registrar Salida
            </button>
            <div id="msj-salida"></div>
        </form>



    </div>
</main>

<script>
    function updateTime() {
        var now = new Date();
        var hours = now.getHours();
        var minutes = now.getMinutes();
        var seconds = now.getSeconds();

        hours = hours < 10 ? '0' + hours : hours;
        minutes = minutes < 10 ? '0' + minutes : minutes;
        seconds = seconds < 10 ? '0' + seconds : seconds;

        var timeString = hours + ':' + minutes + ':' + seconds;

        var options = { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' };
        var dateString = now.toLocaleDateString('es-ES', options);

        document.getElementById('clock').textContent = timeString;
        document.getElementById('date').textContent = dateString;
    }

    setInterval(updateTime, 10000);
    updateTime();

    document.getElementById('ingreso').addEventListener('click', function (event) {
        showTemporaryMessage('Haz marcado la entrada', 'msj-ingreso', 'green');
    });

    document.getElementById('salida').addEventListener('click', function (event) {
        showTemporaryMessage('Haz marcado la salida', 'msj-salida', 'red');
    });

    function showTemporaryMessage(message, containerId, textColor) {
        var messageContainer = document.getElementById(containerId);
        messageContainer.innerHTML = '<div style="padding: 10px; margin-top: 10px; border-radius: 5px; color: ' + textColor + ';">' + message + '</div>';
        setTimeout(function () {
            messageContainer.innerHTML = '';
        }, 5000);
    }
</script>

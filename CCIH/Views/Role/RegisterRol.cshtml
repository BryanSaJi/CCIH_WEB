
@model CCIH.Entities.RoleEnt
@{
    ViewBag.Title = "CrearRol";
    Layout = "~/Views/Shared/_Layout_Administration.cshtml";
}

<main id="main" class="main">

    <div class="pagetitle">
        <h1>Matriculas Activas</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/Administration/Inicio">Dashboard</a></li>
                <li class="breadcrumb-item">Usuario</li>
                <li class="breadcrumb-item active">Crear Rol</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->

    <section class="section">
        <div class="row">
            <div class="col-lg-12">

                <div class="card">
                    <div class="card-body">
                        <h3 class="card-title">Crear Rol:</h3>

                        @using (Html.BeginForm("RegisterRole", "Role", FormMethod.Post))
                        {
                            
                                            <div class="row mb-3 mx-auto">
                                                <div class="col-md-8 mx-auto">
                                                    <div class="form-floating mb-3 mb-md-0">
                                                        @Html.TextBoxFor(m => m.IdRole, new { @type = "text", @placeholder = "Nombre del Rol", @class = "form-control" })
                                                        <label for="inputRolName">Nombre del Rol</label>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row mb-3 mx-auto">
                                                <div class="col-md-8 mx-auto">
                                                    <div class="form-floating">
                                                        @Html.TextBoxFor(m => m.IdUser, new { @type = "text", @class = "form-control", @Value = @Session["IdUser"].ToString(), @disabled = "disabled" })
                                                        <label for="inputLastName">Id Usuario que crea Rol</label>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="d-flex justify-content-end mb-3">
                                                <button type="submit" class="btn btn-primary btn-block">Crear Rol</button>
                                            </div>

                        }

                    </div>
                </div>

            </div>
        </div>
    </section>

</main><!-- End #main -->
